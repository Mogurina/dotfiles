{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "r.rterm.mac": "/usr/local/bin/R",
    "r.sessionWatcher": true,
    "r.plot.useHttpgd": true,
    "files.associations": {
        "*.Rmd": "rmd"
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "window.zoomLevel": -1,
    "terminal.integrated.inheritEnv": false,
    "json.schemas": [

    ],
    // settings.json に追加
    // 複数インスタンスをマージして1ウィンドウで表示
    "window.nativeTabs": true,
    // 左サイドのアクティビティバーを非展開時は非表示
    "workbench.activityBar.location": "top",
    
    // フォント設定 (おまけ)
    "editor.fontFamily": "CaskaydiaCove Nerd Font",
    "editor.fontSize": 16,
  
    // インデントガイドを非表示にする
    "editor.guides.indentation": false,
    // ミニマップは非表示
    "editor.minimap.enabled": false,
    // カッコの色をペアごとに変えない (すべて同じ色にする)
    "editor.bracketPairColorization.enabled": false,
    // カーソルは点滅させない
    "editor.cursorBlinking": "solid",
    // カーソル行はgutterだけハイライト
    "editor.renderLineHighlight": "gutter",
    "workbench.colorTheme": "Ayu Mirage Zed",
    // settings.json

    // テーマ
    "workbench.colorTheme": "Ayu Mirage Zed",
    "workbench.colorCustomizations": {
        // ライン番号とgutterの色変更
        "editorLineNumber.foreground": "#888888",
        "editorLineNumber.activeForeground": "#EFEF33",
        // 選択範囲の色変更
        "editor.selectionBackground": "#565612",
        // オートコンプリートの色変更
        "editorSuggestWidget.selectedForeground": "#CDCDCD",
        "editorSuggestWidget.selectedBackground": "#363C58"
    },
    // アイコン
    "workbench.iconTheme": "catppuccin-mocha",

    //vscode neovim setting
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.compositeKeys": {
        "jk": {
            "command": "vscode-neovim.escape"
        }
    },
    // 開くエディタが異なるので違う設定
      "lazygit-vscode.configPath": "~/dotfiles/lazygit/vscode-config.yaml",
      // 分割エディタで開いた時にも対応
      "lazygit-vscode.autoMaximizeWindow": true,
      // Lazygitを起動したら全画面表示. hideRestoreはもともと非表示でも表示されてしまうので指定しない
      "lazygit-vscode.panels": {
        "sidebar": "hide",
        "panel": "hide",
        "secondarySidebar": "hide"
    },
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "window.customTitleBarVisibility": "never",

    //oil settings
    "oil-code.hasNerdFont": true,
    // これをtrueにしないと、勝手にvimのキーマップが無尽蔵に追加されてしまう
    "oil-code.disableVimKeymaps": true,
    // 起動後、何も開かれていない場合でも、自動でカレントディレクトリを開かない
    "oil-code.disableOpenCwdNothingOpen": true,
}
